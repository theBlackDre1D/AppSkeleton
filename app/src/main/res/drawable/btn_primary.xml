<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="@integer/fadeDuration"
    android:exitFadeDuration="@integer/fadeDuration">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/btn_radius" />
            <solid android:color="@color/btnPressed"/>
        </shape>
    </item>

    <item android:state_enabled="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/btn_radius" />
            <solid android:color="@color/gold" />
        </shape>
    </item>

    <item android:state_enabled="false" >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/btn_radius" />
            <solid android:color="@color/btnInactive"/>
        </shape>
    </item>

</selector>